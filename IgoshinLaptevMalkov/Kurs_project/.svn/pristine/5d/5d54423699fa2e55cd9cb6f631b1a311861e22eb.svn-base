    while(pnt1 != v.end()){
		if( (*pnt1)->Getspeed() < 40){			//удаляем тс со скоростью <40
			delete (*pnt1);
			pnt1 = v.erase(pnt1);
		}else{
			pnt1++;
		}
	}
}
